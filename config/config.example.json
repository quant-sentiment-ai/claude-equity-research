{
  "analysis_settings": {
    "default_timeframe": "12m",
    "risk_tolerance": "moderate",
    "focus_areas": ["fundamental", "technical", "risk", "esg"],
    "output_style": "institutional",
    "include_disclaimers": true,
    "max_report_length": 400
  },
  "risk_parameters": {
    "conservative": {
      "max_position_size": 0.02,
      "stop_loss_threshold": 0.05,
      "min_conviction_score": 0.8,
      "dividend_requirement": 0.02,
      "quality_filter": "investment_grade"
    },
    "moderate": {
      "max_position_size": 0.04,
      "stop_loss_threshold": 0.08,
      "min_conviction_score": 0.7,
      "beta_limit": 1.5,
      "volatility_tolerance": "medium"
    },
    "aggressive": {
      "max_position_size": 0.07,
      "stop_loss_threshold": 0.12,
      "min_conviction_score": 0.6,
      "growth_requirement": 0.15,
      "volatility_tolerance": "high"
    }
  },
  "sector_preferences": {
    "technology": {
      "weight_multiplier": 1.2,
      "key_metrics": ["user_growth", "recurring_revenue", "r_and_d_intensity"],
      "valuation_premium": 0.15
    },
    "financials": {
      "weight_multiplier": 0.9,
      "key_metrics": ["net_interest_margin", "credit_quality", "book_value_growth"],
      "regulatory_focus": true
    },
    "healthcare": {
      "weight_multiplier": 1.0,
      "key_metrics": ["pipeline_value", "patent_cliff", "regulatory_timeline"],
      "esg_weight": 1.3
    },
    "energy": {
      "weight_multiplier": 0.8,
      "key_metrics": ["commodity_exposure", "reserve_life", "capex_efficiency"],
      "esg_critical": true
    }
  },
  "data_sources": {
    "web_search": {
      "max_results": 12,
      "timeout_seconds": 45,
      "retry_attempts": 3,
      "enable_caching": true,
      "cache_duration_minutes": 15
    },
    "financial_apis": {
      "rate_limit_per_minute": 60,
      "preferred_sources": ["sec_filings", "earnings_calls", "analyst_reports"],
      "data_freshness_hours": 4
    },
    "technical_analysis": {
      "chart_timeframes": ["1d", "1w", "1m"],
      "indicators": ["rsi", "macd", "moving_averages", "volume"],
      "options_flow_weight": 0.3
    }
  },
  "output_formatting": {
    "currency_format": "USD",
    "percentage_decimals": 1,
    "include_charts": false,
    "table_formatting": "markdown",
    "citation_style": "inline"
  },
  "compliance_settings": {
    "disclaimer_required": true,
    "educational_only": true,
    "risk_warnings": [
      "not_financial_advice",
      "past_performance",
      "consult_professionals",
      "risk_of_loss"
    ],
    "prohibited_terms": ["guaranteed", "risk-free", "sure thing"]
  },
  "performance_settings": {
    "enable_parallel_search": true,
    "max_concurrent_requests": 5,
    "response_timeout": 300,
    "memory_limit_mb": 512
